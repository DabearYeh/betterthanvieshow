# Auto detect text files and perform LF normalization
* text=auto

# Custom for Visual Studio
*.cs     text diff=csharp
*.csx    text diff=csharp
*.cshtml text diff=html
*.vb     text
*.vbhtml text diff=html
*.vbproj text merge=union
*.csproj text merge=union
*.fsproj text merge=union
*.dbproj text merge=union
*.sln    text eol=crlf merge=union

# Configuration files
*.config text
*.json   text
*.xml    text
*.yml    text
*.yaml   text

# Web files
*.html   text diff=html
*.css    text diff=css
*.js     text
*.ts     text
*.jsx    text
*.tsx    text

# Database files
*.dbml   text
*.sql    text

# Documentation
*.md     text
*.txt    text
README   text
LICENSE  text

# Scripts
*.bat    text eol=crlf
*.cmd    text eol=crlf
*.ps1    text eol=crlf
*.sh     text eol=lf

# Binary files
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.mov    binary
*.mp4    binary
*.mp3    binary
*.flv    binary
*.fla    binary
*.swf    binary
*.gz     binary
*.zip    binary
*.7z     binary
*.ttf    binary
*.eot    binary
*.woff   binary
*.woff2  binary
*.pyc    binary
*.pdf    binary
*.dll    binary
*.exe    binary
*.pdb    binary

# .NET specific
*.DotSettings binary
